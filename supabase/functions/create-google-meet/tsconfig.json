{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2022", "dom"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2022"
  },
  "include": [
    "*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
