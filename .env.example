# Withdrawal Limits Configuration
# Copy this to your .env file and modify as needed

# Maximum withdrawal per transaction (default: 10,000 credits)
VITE_MAX_WITHDRAWAL=10000

# Minimum withdrawal amount (default: 10 credits)
VITE_MIN_WITHDRAWAL=10

# Maximum daily withdrawal (default: 50,000 credits)
VITE_DAILY_WITHDRAWAL_LIMIT=50000

# Credits must age this many days before withdrawal (default: 3 days)
VITE_CREDIT_AGING_DAYS=3

# Rate limit: requests per hour (default: 5)
VITE_RATE_LIMIT_PER_HOUR=5

# Credit to MWK conversion rate (default: 100)
VITE_CONVERSION_RATE=100
